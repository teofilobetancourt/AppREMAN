<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="260dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="122dp"
        android:adjustViewBounds="true"
        android:contentDescription="logo"
        android:scaleType="fitCenter"
        android:src="@drawable/eman2"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnNuevaEmpresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_centerVertical="true"
        android:layout_marginTop="210dp"
        android:onClick="nuevaEmpresaOnClick"
        android:text="Agregar Empresa para Encuestar" />

    <Button
        android:id="@+id/btnListaEmpresas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnNuevaEmpresa"
        android:layout_centerVertical="true"
        android:layout_marginTop="14dp"
        android:onClick="listaEmpresasOnClick"
        android:text="Listado de Empresas Encuestadas" />

</RelativeLayout>
